{
    "name": "CEM",
    "id": "cem",
    "packaging_format": 1,
    "description": {
        "en": "Customer Experience Management."
    },
    "version": "4.0",
    "url": "http://www.deifysolutions.com",
    "license": "free",
    "maintainer": {
		"name": "Deify Infocomm Solutions",
		"email": "support@deifysolutions.com"
    },
    "requirements": {
        "yunohost": ">= 2.7.2"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php7.1-fpm"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for CEM"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for CEM"
                },
                "example": "/cem",
                "default": "/cem"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?"
                },
                "default": true
            }
        ]
    }
}
